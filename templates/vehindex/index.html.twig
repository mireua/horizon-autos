{% extends 'base.html.twig' %}

{% block title %}Our Vehicles{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('styles/vehindex.css') }}">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
<div class="container mt-5">
    <h2 class="mb-3">Browse Our Vehicles</h2>
    <div class="row">
        <div class="col-md-3">
            <input type="text" id="searchInput" class="form-control mb-3" placeholder="Search by Make or Model">
            <div class="mb-3">
                <label for="sortPrice" class="form-label">Sort by Price</label>
                <select id="sortPrice" class="form-select">
                    <option value="asc">Lowest to Highest</option>
                    <option value="desc">Highest to Lowest</option>
                </select>
            </div>
            <div class="mb-3">
                <label for="sortYear" class="form-label">Sort by Year</label>
                <select id="sortYear" class="form-select">
                    <option value="asc">Oldest to Newest</option>
                    <option value="desc">Newest to Oldest</option>
                </select>
            </div>
            <div class="mb-3">
                <label for="sortEngine" class="form-label">Sort by Engine Size</label>
                <select id="sortEngine" class="form-select">
                    <option value="asc">Smallest to Largest</option>
                    <option value="desc">Largest to Smallest</option>
                </select>
            </div>
            <div class="d-flex">
                <button class="btn btn-primary me-2 flex-grow-1" onclick="applyFilters()">Apply Filters</button>
                <a href="{{ path('veh_index') }}" class="btn btn-secondary flex-grow-1">Reset Search & Filter</a>
            </div>
        </div>
        <div class="col-md-9">
            <div class="row" id="vehicleList">
                {% for vehicle in vehicles %}
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img src="{{ asset('images/cars/' ~ vehicle.image ~ '') }}" class="card-img-top" alt="Vehicle Image">
                        <div class="card-body">
                            <h5 class="card-title">{{ vehicle.make }} {{ vehicle.model }} ({{ vehicle.year }})</h5>
                            <p class="card-text">{{ vehicle.description }}</p>
                            <p class="card-text"><strong>Price:</strong> â‚¬{{ vehicle.price|number_format(2, '.', ',') }}</p>
                            <a href="{{ path('veh_details', {'id': vehicle.id}) }}" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>

<script>
    function applyFilters() {
        var sortPrice = document.getElementById('sortPrice').value;
        var sortYear = document.getElementById('sortYear').value;
        var sortEngine = document.getElementById('sortEngine').value;
        var searchInput = document.getElementById('searchInput').value;

        // Redirect to the same page with filter parameters as query parameters
        window.location.href = `?sortPrice=${sortPrice}&sortYear=${sortYear}&sortEngine=${sortEngine}&search=${searchInput}`;
    }
</script>
{% endblock %}

{% block javascripts %}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    document.getElementById('sortPrice').addEventListener('change', function() {
        var newSortOrder = this.value;
        window.location.href = `?sortPrice=${newSortOrder}`;
    });

    document.getElementById('sortYear').addEventListener('change', function() {
        var newSortOrder = this.value;
        window.location.href = `?sortYear=${newSortOrder}`;
    });

    document.getElementById('sortEngine').addEventListener('change', function() {
        var newSortOrder = this.value;
        window.location.href = `?sortEngine=${newSortOrder}`;
    });
</script>
{% endblock %}

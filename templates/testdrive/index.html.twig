{% extends 'base.html.twig' %}

{% block title %}Book a Test Drive{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('styles/booktestdrive.css') }}">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}

{% block body %}
<div class="container mt-5">
    <h2 class="mb-3">Book a Test Drive</h2>
    <form method="post">
        <div class="mb-3">
            <label for="vehicleModel" class="form-label">Select Model:</label>
            <select id="vehicleModel" class="form-select" name="model">
                {% for vehicle in vehicles %}
                <option value="{{ vehicle.model }}">{{ vehicle.model }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="mb-3">
            <label for="testDate" class="form-label">Preferred Date:</label>
            <input type="date" id="testDate" name="date" class="form-control">
        </div>
        <div class="mb-3">
            <label for="testTime" class="form-label">Preferred Time:</label>
            <input type="time" id="testTime" name="time" class="form-control">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
{% endblock %}

{% block javascripts %}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Edit Car{% endblock %}

{% block body %}
<div class="container mt-5">
    <h2 class="mb-4">Edit Car</h2>
    <div class="row">
        <div class="col-md-6">
            <form action="{{ path('admin_car_edit', {'id': car.id}) }}" method="post">
                <div class="form-group">
                    <label for="make">Make</label>
                    <select class="form-control" id="make" name="make">
                        <option value="BMW" {% if car.make == 'BMW' %} selected {% endif %}>BMW</option>
                        <option value="Audi" {% if car.make == 'Audi' %} selected {% endif %}>Audi</option>
                        <option value="Volkswagen" {% if car.make == 'Volkswagen' %} selected {% endif %}>Volkswagen</option>
                        <option value="Nissan" {% if car.make == 'Nissan' %} selected {% endif %}>Nissan</option>
                        <option value="Toyota" {% if car.make == 'Toyota' %} selected {% endif %}>Toyota</option>
                        <option value="Honda" {% if car.make == 'Honda' %} selected {% endif %}>Honda</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="model">Model</label>
                    <input type="text" class="form-control" id="model" name="model" value="{{ car.model }}">
                </div>
                <div class="form-group">
                    <label for="year">Year</label>
                    <input type="text" class="form-control" id="year" name="year" value="{{ car.year }}">
                </div>
                <div class="form-group">
                    <label for="engine">Engine</label>
                    <input type="text" class="form-control" id="engine" name="engine" value="{{ car.engine }}">
                </div>
                <div class="form-group">
                    <label for="price">Price</label>
                    <input type="text" class="form-control" id="price" name="price" value="{{ car.price }}">
                </div>
                <div class="form-group">
                    <label for="vin">VIN</label>
                    <input type="text" class="form-control" id="vin" name="vin" value="{{ car.vin }}">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea class="form-control" id="description" name="description">{{ car.description }}</textarea>
                </div>
                <div class="form-group">
                    <label for="image">Image</label>
                    <input type="text" class="form-control" id="image" name="image" value="{{ car.image }}">
                </div>
                <button type="submit" class="btn btn-primary">Save Changes</button>
            </form>
        </div>
    </div>
</div>
{% endblock %}

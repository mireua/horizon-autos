{% extends 'base.html.twig' %}

{% block title %}Past Orders{% endblock %}

{% block body %}
<div class="container mt-5">
    <h2 class="mb-4">Past Orders</h2>
    <div class="accordion" id="orderAccordion">
        {% for order in orders %}
        <div class="accordion-item">
            <h2 class="accordion-header" id="heading{{ order.id }}">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse{{ order.id }}" aria-expanded="false" aria-controls="collapse{{ order.id }}">
                    Order #{{ order.id }} - {{ order.date|date('Y-m-d H:i') }}
                </button>
            </h2>
            <div id="collapse{{ order.id }}" class="accordion-collapse collapse" aria-labelledby="heading{{ order.id }}" data-bs-parent="#orderAccordion">
                <div class="accordion-body">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Items</h5>
                            <ul class="list-group list-group-flush">
                                {% for item in order.items %}
                                <li class="list-group-item">
                                    {{ item.name }} - {{ item.price|number_format(2) }} {{ item.currency }}
                                </li>
                                {% endfor %}
                            </ul>
                        </div>
                        <div class="card-footer text-muted">
                            Total: {{ order.total|number_format(2) }} {{ order.currency }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Message Inbox{% endblock %}

{% block stylesheets %}
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
<style>
    .chat-box {
        width: 100%;
        height: 400px;
        overflow-y: scroll;
        border: 1px solid #ccc;
        padding: 10px;
        background-color: #f8f9fa;
    }
    .message {
        width: 60%;
        margin-bottom: 10px;
        padding: 10px;
        box-shadow: 0 1px 1px rgba(0, 0, 0, 0.1);
    }
    .sender {
        background-color: #e9eff5;
        align-self: flex-start;
    }
    .receiver {
        background-color: #d1e7dd;
        align-self: flex-end;
    }
    .send-message {
        width: 100%;
        padding: 10px;
        border-radius: 0;
        box-shadow: none;
        border: 2px solid #007bff;
    }
</style>
{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-lg-4">
            <div class="card mt-4">
                <div class="card-header">Inbox</div>
                <div class="card-body">
                    {% for inquiry in inquiries %}
                    <a href="#{{ inquiry.id }}" class="media mb-3">
                        <div class="media-body">
                            <h5 class="mt-0">{{ inquiry.car.getMake() }} {{ inquiry.car.getModel() }}</h5>
                            <p>{{ inquiry.message }}</p>
                        </div>
                    </a>
                    {% endfor %}
                </div>
            </div>
        </div>
        <div class="col-lg-8">
            {% if selectedInquiry %}
            <div class="card mt-4">
                <div class="card-header">{{ selectedInquiry.car.getMake() }} {{ selectedInquiry.car.getModel() }}</div>
                <div class="card-body">
                    <div class="chat-box d-flex flex-column">
                        {% for message in selectedInquiry.getMessage() %}
                        <div class="message {{ inquiry.getSender() == user ? 'sender' : 'receiver' }}">
                            {{ inquiry.getMessage() }}
                        </div>
                        {% endfor %}
                    </div>
                    <textarea class="form-control send-message mt-3" rows="2" placeholder="Write a reply..."></textarea>
                    <button class="btn btn-primary mt-3"><i class="fa fa-paper-plane"></i> Send Message</button>
                </div>
            </div>
            {% else %}
            <div class="card mt-4">
                <div class="card-header">Select an Inquiry</div>
                <div class="card-body">
                    <p>Please select an inquiry from the left to view messages.</p>
                </div>
            </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
